{
  "name": "boidpaper",
  "version": "0.0.1",
  "description": "BoidPaper Core Package",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "main": "dist",
  "types": "dist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arthurlee945/BoidPaper.git"
  },
  "bugs": {
    "url": "https://github.com/arthurlee945/BoidPaper/issues"
  },
  "scripts": {
    "build:types": "tsc --project tsconfig.build.json",
    "build:src": "node buildConfig/build.cjs",
    "build": "rm -rf dist tsconfig.tsbuildinfo && npm-run-all --parallel build:*",
    "dev": "node build/build-watch.cjs",
    "test": "jest",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint --fix src --ext .js,.ts",
    "format": "prettier --write src",
    "clean": "git clean -xdf node_modules && rm -rf pnpm-lock.yaml dist",
    "prepack": "npm run build"
  },
  "keywords": [],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "author": "arthur lee <arthur.lee945@gmail.com>",
  "license": "MTI",
  "devDependencies": {
    "@boidpaper/eslint-config": "workspace:^",
    "@boidpaper/prettier": "workspace:^",
    "@boidpaper/tsconfig": "workspace:^",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@boidpaper/eslint-config/base.cjs"
    ]
  },
  "prettier": "@boidpaper/prettier"
}
