{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Package Config",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es2017", "es7", "es6", "es2022"],
    "jsx": "preserve",

    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,

    "outDir": "./dist",
    "sourceMap": true,
    "noEmit": false,

    "allowJs": true,

    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./dist"]
}
